# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										controllers.Application.welcome()
GET		/go											controllers.Application.redir()
GET 	/to											controllers.Application.index(code)


# User
GET     /register                   controllers.Registration.registerForm()
POST    /register                   controllers.Registration.register()
GET     /login                      controllers.Login.loginForm()
POST    /login                      controllers.Login.login()

GET     /language                   controllers.Language.chooseLanguage()
GET     /sandbox                    controllers.Markup.sandbox()
POST    /sandbox                    controllers.Markup.sandbox()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
