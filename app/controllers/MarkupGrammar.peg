Post = ( Paragraph / Delimiter )* {post} ;

Paragraph = (!Delimiter ( Link / Multispace / Any ))+ {paragraph} ;

Any = _ {escape} ;
Delimiter = "\r"? "\n" [\t\r ]* "\n" ;
Multispace = " " " "+ {multispace} ;

Link = Alpha Alnum* "://" ( LinkSymbols* OkEnd )* {link} ;

LinkSymbols = "-" / "." / "_" / "~" / ":"
		  / "?" / "#" / "[" / "]"
		  / "@" / "!" / "$" / "&" / "'"
		  / "(" / ")" / "*" / "+" / ","
		  / ";" / "=" / "%" ;

OkEnd = "/" / Alnum ;

Alpha = [a-z] / [A-Z] ;
Digit = [0-9] ;
Alnum = Alpha / Digit ;
